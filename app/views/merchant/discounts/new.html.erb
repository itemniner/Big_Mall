<h1>Add Discount</h1>

<%= form_tag "/merchant/discounts", method: :post do %>

    <%= label_tag :name %>
    <%= text_field_tag :name %>

    <%= label_tag :percentage %>
    <%= text_field_tag :percentage %>

    <%= label_tag :min_items %>
    <%= text_field_tag :min_items %>

    <%= label_tag :decription %>
    <%= text_field_tag :decription %>

    <%= submit_tag 'Submit' %>
  <% end %>